    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Test bubbly2",
            "cargo": {
                "args": [
                    "build",
                    "--bin=audio",
                    "--package=audio"
                ],
                "filter": {
                    "name": "audio",
                    "kind": "bin"
                }
            },
            "args": [
                "data/bubbly2.wav",
                "data/bubbly2-new.wav"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'audio'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=audio",
                    "--package=audio"
                ],
                "filter": {
                    "name": "audio",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}